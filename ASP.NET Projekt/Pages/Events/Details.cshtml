@page
@model ASP.NET_Projekt.Pages.Events.DetailsModel

@{
    ViewData["Title"] = "About this Event";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

@if (Request.Method == "POST")
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        You've successfully joined the event!
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<h1>@Html.DisplayFor(model => model.Event.Title)</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event.Place)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.Place)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event.SpotsAvailable)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.SpotsAvailable)
        </dd>
    </dl>

    @if (!Model.AttendeeIsAttending)
    {
        <form method="post">
            <button class="btn btn-primary" type="submit">Join this event</button>
        </form>
    }
    else
    {
        <p class="text-success">You have joined this event!</p>
        <a class="btn btn-primary" asp-page="/MyEvents/Index">Go to my events</a>
    }

</div>
<div>
    <a asp-page="./Index">Back to List</a>
</div>
